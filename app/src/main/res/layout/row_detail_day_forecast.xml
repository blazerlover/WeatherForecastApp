<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/row_detail_day_forecast__ivWeather"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/row_detail_day_forecast__guideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row_detail_day_forecast__guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <LinearLayout
        android:id="@+id/row_detail_day_forecast__llDailyForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/row_detail_day_forecast__guideLine"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/row_detail_day_forecast__tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdad"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_detail_day_forecast__tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdad"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_detail_day_forecast__tvDayForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="asdasdad"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_detail_day_forecast__tvNightForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="asdasdad"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>